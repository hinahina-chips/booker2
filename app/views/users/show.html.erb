<!-- テンプレート化する -->
<%= form_with model: @book do |f| %>
  <h2>New book</h2>
  <p>Title</p>
  <%= f.text_field :title %><!--モデル名をもとにdbにアクセス -->
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
<!----------------------------->

<h1>Book</h1>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @user.books.each do |book| %>
    <tr>
      <td></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>
