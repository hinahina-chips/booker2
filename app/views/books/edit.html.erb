
<%= render 'validate', book: @book %>
<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <br /><%= f.submit 'Update Book', class:"btn btn-lg btn-secondary"%>
      <% end %>
      <div>
        <%= link_to "Show", book_path(@book.id) %>
        <span>|</span>
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>


