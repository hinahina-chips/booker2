<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<ul>
    <li><%= link_to "Show", book_path(@book.id) %></li>
    <li> | </li>
    <li><%= link_to "Back", books_path %></li>
</ul>
