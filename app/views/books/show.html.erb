<h1>User info</h1>
<table>
  <tr>
    <th>name</th>
    <th>introduction</th>
  </tr>
  <tr>
    <td><%= @book.user.name%></td>
    <td><%= @book.user.introduction%></td>
  </tr>
</table>
<% if @book.user.id == current_user.id %>
  <%= link_to "edit", edit_user_path(@book.user.id) %>
<% else %>
  <%= link_to "edit", user_path(current_user.id) %>
<% end %>

<!-- テンプレート化する -->
<%= form_with model: @book do |f| %>
  <h2>New book</h2>
  <p>Title</p>
  <%= f.text_field :title %><!--モデル名をもとにdbにアクセス -->
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
<!----------------------------->

<h1>Book detail</h1>
<table>
  <td>
    <div>
      <%= link_to @book.user.name, user_path(@book.user_id) %>
    </div>
  </td>
  <td><%= @book.title %></td>
  <td><%= @book.body %></td>
  <% if @book.user_id == current_user.id %>
    <td><%= link_to "edit", edit_book_path(@book.id) %></td>
    <td><%= link_to "destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></td>
  <% end %>
</table>
