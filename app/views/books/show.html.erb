<div class = "container">
  <div class = "row">
    <div class = "col-lg-4">
      <h1>User info</h1>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <table class = "table">
        <tr>
          <th>name</th>
          <th>introduction</th>
        </tr>
        <tr>
          <td><%= @book.user.name%></td>
          <td><%= @book.user.introduction%></td>
        </tr>
      </table>
      <!-- profile編集button -->
      <% if @book.user_id == current_user.id %>
          <%= link_to edit_user_path(current_user.id), class:"btn btn-lg btn-block btn-light mt-4" do %>
            <i class="fas fa-user-cog"></i><!-- このユーザーページが自分の場合 -->
          <% end %>
      <% else %>
          <%= link_to user_path(current_user.id), class:"btn btn-lg btn-block btn-light mt-4" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
      <% end %>

      <%= form_with model: @book_new do |f| %>
        <h2>New book</h2>
        <p>Title</p>
        <%= f.text_field :title %><!--モデル名をもとにdbにアクセス -->
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-light mt-4" %>
      <% end %>
    </div>
    <div class = "col-lg-8">
      <h1>Book detail</h1>
      <table class = "table">
        <td>
          <div>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <%= link_to @book.user.name, user_path(@book.user_id) %>
          </div>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user_id == current_user.id %>
          <td><%= link_to "edit", edit_book_path(@book.id), class:"btn btn-lg btn-block btn-success mt-4" %></td>
          <td><%= link_to "destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?", class:"btn btn-lg btn-block btn-danger mt-4" %></td>
        <% end %>
      </table>
    </div>
  </div>
</div>
