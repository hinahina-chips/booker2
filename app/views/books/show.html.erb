<div class = "container">
  <div class = "row">
    <div class = "col-lg-4">
      <h1>User info</h1>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <table class = "table table-striped">
        <tr>
          <th>name</th>
          <th>introduction</th>
        </tr>
        <tr>
          <td><%= @book.user.name%></td>
          <td><%= @book.user.introduction%></td>
        </tr>
      </table>
      <% if @book.user.id == current_user.id %>
        <%= link_to "edit", edit_user_path(@book.user.id) %>
      <% else %>
        <%= link_to "edit", user_path(current_user.id) %>
      <% end %>
      <%= form_with model: @book_new do |f| %>
        <h2>New book</h2>
        <p>Title</p>
        <%= f.text_field :title %><!--モデル名をもとにdbにアクセス -->
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class = "col-lg-8">
      <h1>Book detail</h1>
      <table class = "table table-striped">
        <td>
          <div>
            <%= image_tag @book.user.get_profile_image(100,100) %>
            <%= link_to @book.user.name, user_path(@book.user_id) %>
          </div>
        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user_id == current_user.id %>
          <td><%= link_to "edit", edit_book_path(@book.id) %></td>
          <td><%= link_to "destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        <% end %>
      </table>
    </div>
  </div>
</div>
